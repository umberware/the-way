  "author": "Hanor SÃ¡tiro Cintra <hanor.cintra@outlook.com>",
  "license": "MIT",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/src/main/",
      "/src/test/util",
      "/src/test/scenario",
      "/src/test/mock"
    ],
    "testRegex": ".test.ts",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testTimeout": 30000,
    "reporters": [
      "default",
      [
        "./node_modules/jest-html-reporter",
